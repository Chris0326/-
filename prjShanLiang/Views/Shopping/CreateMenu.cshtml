@model prjShanLiang.ViewModels.CMealViewModel

@{
    ViewData["Title"] = "新增餐點";
}
<style>


</style>
<main id="main">
    <div class="container aos-init aos-animate" data-aos="fade-up">
        <div class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
            </div>
        </div><!-- End Breadcrumbs -->
        <!-- ======= Breadcrumbs ======= -->


        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateMenu" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" value="@ViewBag.storeId" name="StoreId" />

                    <div class="form-group">
                        <label asp-for="MealName" class="control-label"></label>
                        <input asp-for="MealName" class="form-control" id="mealName"/>
                        <span asp-validation-for="MealName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MealPrice" class="control-label"></label>
                        <input asp-for="MealPrice" class="form-control" id="mealPrice" />
                        <span asp-validation-for="MealPrice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Recommendation" class="control-label"></label>
                        <input asp-for="Recommendation" class="form-control" id="recommendation" />
                        <span asp-validation-for="Recommendation" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">餐點圖片</label>
                        <input type="file" name="MealImage" class="form-control" onchange="readURL(this)" targetID="preview_progressbarTW_img" />
                        <img id="preview_progressbarTW_img" style="margin-top:10px" src="#" alt="請選擇要上傳的圖片" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="確認" class="btn btn-primary" />
                        @Html.ActionLink("返回", "StoreMenuList","Shopping",null,new{ @class = "btn btn-danger"})
                        <button type="button" onclick="autofill1()" class="btn btn-warning">Demo(1)</button>
                        <button type="button" onclick="autofill2()" class="btn btn-warning">Demo(2)</button>
                        <button type="button" onclick="autofill3()" class="btn btn-warning">Demo(3)</button>
                        <button type="button" onclick="autofill4()" class="btn btn-warning">Demo(4)</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</main><!-- End #main -->
@section Scripts {
    <script>
        @*此方法為顯示要上傳的照片*@
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#preview_progressbarTW_img')
                        .attr('src', e.target.result)
                        .width(200)
                        .height(200);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
        function autofill1() {
            document.getElementById("mealName").value = "義式時蔬匯酪梨";
            document.getElementById("mealPrice").value = "280";
            document.getElementById("recommendation").value = "特製酪梨沙拉泥鋪底搭配炒至噴香的時蔬條，淋上義式芥末籽醬清爽開胃，挑動春季味蕾。";
        }
        function autofill2() {
            document.getElementById("mealName").value = "墨西哥鮮蔬烘蛋";
            document.getElementById("mealPrice").value = "250";
            document.getElementById("recommendation").value = "採用特色墨西哥綜合蔬菜添加牛番茄、融合乳酪製成烘蛋口感綿密而紮實，蛋香濃郁。";
        }
        function autofill3() {
            document.getElementById("mealName").value = "焗烤起司蓮子盅";
            document.getElementById("mealPrice").value = "200";
            document.getElementById("recommendation").value = "精選蓮子、白果等豐富食材調和青豆泥為底，鋪上雙色起司烘烤入口濃郁牽絲的必吃經典。";
        }
        function autofill4() {
            document.getElementById("mealName").value = "香蕉胡桃塔";
            document.getElementById("mealPrice").value = "180";
            document.getElementById("recommendation").value = "特製香蕉與胡桃融合製作成塔底擺上胡桃粒，及點綴杏仁粉香濃綿細中帶獨特香氣，令人心曠神怡。";
        }
    </script>

}

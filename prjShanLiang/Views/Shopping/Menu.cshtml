@model IEnumerable<prjShanLiang.Models.MealMenu>
@{
    ViewData["Title"] = "訂餐頁面";
}
@section Styles{
    <style>
        .toTop-arrow {
            width: 4.3rem;
            height: 4.3rem;
            padding: 0;
            margin: 0;
            border: 0;
            border-radius: 33%;
            opacity: 0.6;
            background: #000;
            cursor: pointer;
            position: fixed;
            right: 1rem;
            bottom: 5rem;
            display: none;
        }

            .toTop-arrow::before, .toTop-arrow::after {
                width: 25px;
                height: 6px;
                border-radius: 3px;
                background: #f90;
                position: absolute;
                content: "";
            }

            .toTop-arrow::before {
                transform: rotate(-45deg) translate(0, -50%);
                left: 0.42rem;
            }

            .toTop-arrow::after {
                transform: rotate(45deg) translate(0, -50%);
                right: 0.42rem;
            }

            .toTop-arrow:focus {
                outline: none;
            }
        /*=====================以上是回到最上層的CSS=========================*/
        .my-image {
            width: 600px;
            height: auto;
        }

        .form-group .form-control {
            margin-bottom: 10px;
        }

        .Top-image {
            display: block;
            margin: auto;
            max-width: 100%;
            max-height: 100%;
        }

        .Meal-image {
            display: block;
            margin: auto;
            max-width: 100%;
            max-height: 100%;
        }

        .row {
            display: block;
            margin: auto;
            max-width: 100%;
            max-height: 100%;
            font-size: 14px;
        }

        .card {
            width: 400px;
            height: 500px;
            background-color: orange;
            margin: 0px 20px 20px 20px;
        }
    </style>
}

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        //回到最頂端功能
        $(function () {
            $('#BackTop').click(function () {
                $('html,body').animate({ scrollTop: 0 }, 333);
            });
            $(window).scroll(function () {
                if ($(this).scrollTop() > 300) {
                    $('#BackTop').fadeIn(222);
                } else {
                    $('#BackTop').stop().fadeOut(222);
                }
            }).scroll();
        });
        //使用Ajax非同步(完成)
        function con(id) {
            var mealId = id;
            var count = $('#'+id).val();
            
            $.ajax({
                url: "/api/shoppingcart/add-to-cart?id=" + id + "&count=" + count ,
                type: "GET",
              
                success: function (data) {
                    if (data.success) {
                        alert("商品已成功加入購物車");
                    } else {
                        alert(data.message);
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert("加入購物車失敗");
                }

            });
        };
    </script>
}
<button type="button" id="BackTop" class="toTop-arrow"></button>   @*回到最上層按鈕*@


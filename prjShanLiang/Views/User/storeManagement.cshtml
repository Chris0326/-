@model IEnumerable<prjShanLiang.Models.Store>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link href="css/style.css" rel="stylesheet">

<style>
    .card {
        box-shadow: -1px 10px 25px -15px black;
    }

    .card-wr-bg:hover {
        background-color: #f4dd97;
        cursor: pointer;
        transition: all 1s ease;
        transform: scale(1.04);
    }

    .card-b-bg:hover {
        background-color: #87ceeb;
        cursor: pointer;
        transition: all 1s ease;
        transform: scale(1.04);
    }

    .card-s-bg:hover {
        background-color: #8bdfb8;
        cursor: pointer;
        transition: all 1s ease;
        transform: scale(1.04);
    }

    .card-d-bg:hover {
        background-color: #f07a85;
        cursor: pointer;
        transition: all 1s ease;
        transform: scale(1.04);
    }

    .card-footer {
        justify-content: space-around;
        text-align: center;
        display: flex;
        padding: 0px !important;
    }

        .card-footer div {
            flex-grow: 1 !important;
            border-right: 1px solid #dbdbdb;
            padding: 10px 0;
        }

            .card-footer div:last-child {
                border-right: none;
            }
</style>


@{
    ViewData["Title"] = "storeManagement";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>餐廳管理中心</h2>
                <ul>
                    <p>你好,@ViewBag.storeName</p>
                    @Html.ActionLink("登出", "logOut","User")
                   
                </ul>
            </div>

        </div>
    </div><!-- End Breadcrumbs -->

    <section class="sample-page">
        <div class="container" data-aos="fade-up">
            <!--==============================================-->
        </div>
    </section>

    <body>
        <div class="container py-5">
            <div class="d-flex justify-content-center">
                <div class="col-6">
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <div class="col mt-5" style="width:300px" justify-content-center>
                            <div class="card border-warning card-wr-bg">
                                <img src="~/images/store/Chao炒炒蔬食熱炒.jpg" class="card-img-top" alt="...">
                                <div class="card-body d-grid gap-3">
                                    @*  <h5 class="card-title text-center text-capitalize">Silver</h5>
                                    <p class="card-text text-center p-0 pb-3"></p>*@
                                    <img src="~/images/icons/man3.png" style="margin:auto;" alt="...">
                                </div>
                                <div class="card-footer text-light bg-warning">
                                    @Html.ActionLink("修改資料", "storeDataRevision" ,new {  Model.FirstOrDefault().AccountName  })
                                </div>
                            </div>
                        </div>
                        @*以下為第二張card*@
                        <div class="col mt-5 border-success" style="width:300px" justify-content-center>
                            <div class="card border-success card-s-bg">
                                <img src="~/images/store/Chao炒炒蔬食熱炒.jpg" class="card-img-top" alt="...">
                                <div class="card-body d-grid gap-3">
                                    @* <h5 class="card-title text-center text-capitalize">Silver</h5>
                                    <p class="card-text text-center p-0 pb-3"></p>*@
                                    <img src="~/images/icons/myAction.png" style="margin:auto;" alt="...">
                                </div>
                                <div class="card-footer text-light bg-success">
                                    @Html.ActionLink("修改資料", "storeDataRevision" ,new {  Model.FirstOrDefault().AccountName  })
                                </div>
                            </div>
                        </div>
                        @*以下為第三張card*@
                        <div class="col mt-5 border-info" style="width:300px" justify-content-center>
                            <div class="card border-info card-b-bg">
                                <img src="~/images/store/Chao炒炒蔬食熱炒.jpg" class="card-img-top" alt="...">
                                <div class="card-body d-grid gap-3">
                                    @* <h5 class="card-title text-center text-capitalize">Silver</h5>
                                    <p class="card-text text-center p-0 pb-3"></p>*@
                                    <img src="~/images/icons/meal1.png" style="margin:auto;" alt="...">
                                </div>
                                <div class="card-footer text-light bg-info">
                                    @Html.ActionLink("餐點清單", "StoreMenuList" ,"Shopping",new { id= ViewBag.storeId })
                                </div>
                            </div>
                        </div>
                        @*以下為第四張card*@
                        <div class="col mt-5" style="width:300px" justify-content-center>
                            <div class="card border-danger card-d-bg">
                                <img src="~/images/store/Chao炒炒蔬食熱炒.jpg" class="card-img-top" alt="...">
                                <div class="card-body d-grid gap-3">
                                    @*  <h5 class="card-title text-center text-capitalize">Platinum</h5>
                                    <p class="card-text text-center p-0 pb-3"></p>*@
                                    <img src="~/images/icons/restaurant.png" style="margin:auto;" alt="...">
                                </div>
                                <div class="card-footer bg-danger text-light">
                                    @Html.ActionLink("修改資料", "storeDataRevision" ,new {  Model.FirstOrDefault().AccountName  })
                                    @* <div><i class="bi bi-facebook"></i></div>
                                    <div><i class="bi bi-twitter"></i></div>
                                    <div><i class="bi bi-youtube"></i></div>
                                    <div><i class="bi bi-linkedin"></i></div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

</main><!-- End #main -->

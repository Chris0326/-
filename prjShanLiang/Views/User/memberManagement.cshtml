                                <div class="card-body d-grid gap-3">
                                   @* <h5 class="card-title text-center text-capitalize">Silver</h5>
                                    <p class="card-text text-center p-0 pb-3"></p>*@
                                    <img src="~/images/icons/myAction.png" style="margin:auto;" alt="...">
                                </div>
                                <div class="card-footer text-light bg-success">
                                    @Html.ActionLink("餐點清單", "StoreMenuList" ,"Shopping",new { id=1 })
                                </div>
                            </div>
                        </div>
                        @*以下為第三張card*@
                        <div class="col mt-5 border-info" style="width:300px" justify-content-center>
                            <div class="card border-info card-b-bg">
                                <img src="~/images/store/Chao炒炒蔬食熱炒.jpg" class="card-img-top" alt="...">
                                <div class="card-body d-grid gap-3">
                                   @* <h5 class="card-title text-center text-capitalize">Silver</h5>
                                    <p class="card-text text-center p-0 pb-3"></p>*@
                                    <img src="~/images/icons/meal1.png" style="margin:auto;" alt="...">
                                </div>
                                <div class="card-footer text-light bg-info">
                                    @Html.ActionLink("我的訂單", "MyMealOrder","Shopping" ,new {  id=Model.FirstOrDefault().MemberId  })
                                </div>
                            </div>
                        </div>
                        @*以下為第四張card*@
                        <div class="col mt-5" style="width:300px" justify-content-center>
                            <div class="card border-danger card-d-bg">
                                <img src="~/images/store/Chao炒炒蔬食熱炒.jpg" class="card-img-top" alt="...">
                                <div class="card-body d-grid gap-3">
                                  @*  <h5 class="card-title text-center text-capitalize">Platinum</h5>
                                    <p class="card-text text-center p-0 pb-3"></p>*@
                                    <img src="~/images/icons/restaurant.png" style="margin:auto;" alt="...">
                                </div>
                                <div class="card-footer bg-danger text-light">
                                    @Html.ActionLink("修改資料", "memberDataRevision" ,new {  Model.FirstOrDefault().Email  })
                                    @* <div><i class="bi bi-facebook"></i></div>
                                    <div><i class="bi bi-twitter"></i></div>
                                    <div><i class="bi bi-youtube"></i></div>
                                    <div><i class="bi bi-linkedin"></i></div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

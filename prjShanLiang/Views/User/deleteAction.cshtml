@model IEnumerable<prjShanLiang.Models.MemberAction>

@{
    ViewData["Title"] = "我的收藏";
}

<main id="main">
    <div class="container aos-init aos-animate" data-aos="fade-up">
        <!-- ======= Breadcrumbs ======= -->
        <div class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
            </div>
        </div><!-- End Breadcrumbs -->

        <table class="table">
            <thead>
                <tr>
                    <th>
                        餐廳名稱
                    </th>
                    <th>
                        我的收藏
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Store.RestaurantName
                        </td>
                        <td>
                            @item.Action.ActionName
                        </td>
                        <td>

                            @Html.ActionLink("刪除", "deleteAction","User", new {  no = item.No, Email = item.Member.Email},new {onclick="return confirm('確定要刪除該筆嗎?')"})

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main><!-- End #main -->
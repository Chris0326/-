@model IEnumerable<prjShanLiang.Models.Admin>

@{
    ViewData["Title"] = "List";
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        管理員資料一覽表
    </div>
    <div class="card-body">

        <table id="adminDataTables" class="hover cell-border">
            <a asp-action="Create" >新增帳號</a>
            <thead>
                <tr>
                    <th>管理員編號</th>
                    <th>管理員帳號</th>
                    <th>管理員權限</th>
                    <th>設定</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                    foreach (var item in Model){
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@Html.DisplayFor(modelItem => item.AdminName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Identification)</td>
                            <td>
                                @Html.ActionLink("修改", "Edit", new { id = item.AdminId }, new {Class="btn btn-primary"}) |
                                @Html.ActionLink("刪除", "Delete","Admin", new {  id=item.AdminId },new {onclick="return confirm('確定刪除嗎?')", Class="btn btn-danger"})
                            </td>
                        </tr>
                      }}
                    </tbody>
        </table>
    </div>
</div>
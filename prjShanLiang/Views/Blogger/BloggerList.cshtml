@model IEnumerable<prjShanLiang.Models.Blog>

@{
    ViewData["Title"] = "BloggerList";
}
<main id="main">
    <div class="container aos-init aos-animate" data-aos="fade-up">
        <!-- ======= Breadcrumbs ======= -->
        <div class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h1>文章專欄</h1>
                    
                    <p>
                        @using (Html.BeginForm())
                        {
                            @:關鍵字 @Html.TextBox("txtKeyword") <input type="submit" value="查詢文章標題">
                        }
                    </p>
                    <p>
                        <a asp-action="BloggerCreate">我要投稿</a>
                    </p>
                </div>
            </div>
        </div><!-- End Breadcrumbs -->
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        文章編號
                    </th>
                    <th>
                        文章主題
                    </th>
                    <th>
                        文章內容
                    </th>
                    <th>
                        參考圖片
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BlogHeader)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BlogContent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BlogPic)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }}
            </tbody>
        </table>
    </div>
</main>
